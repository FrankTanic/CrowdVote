<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CrowdVote</title>
    @Styles.Render("~/Content/Style.css")
</head>
<body>
    <header>
        <h1>CrowdVote @if (@ViewBag.Cat != null) { <a href="@Url.Action("Details", "Categories", new { id = @ViewBag.Category })" >>> @ViewBag.Cat</a>}</h1>
    @Html.MvcSiteMap().Menu() 
    @Html.MvcSiteMap().SiteMapPath()
    </header>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
